{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug SvelteKit Client (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/cotulenh-app",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "runtimeArgs": ["--disable-web-security", "--disable-features=VizDisplayCompositor"],
      "sourceMapPathOverrides": {
        "/src/*": "${webRoot}/src/*",
        "/*": "${webRoot}/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug SvelteKit (Server with Source Maps)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:debug"],
      "cwd": "${workspaceFolder}/apps/cotulenh-app",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": [
        "Debug SvelteKit (Server with Source Maps)",
        "Debug SvelteKit Client (Chrome)"
      ]
    }
  ]
}
