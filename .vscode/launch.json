{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox against localhost",
      "url": "http://localhost:5173", // Change port if needed
      "webRoot": "${workspaceFolder}/apps/cotulenh-app"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/cotulenh-app",
      "sourceMapPathOverrides": {
        "/*": "${workspaceFolder}/apps/cotulenh-app/*"
      }
    }
  ]
}
