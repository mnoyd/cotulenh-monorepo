	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch cotulenh-app (Vite)",
			"type": "node-terminal", // Use node-terminal for Vite/SvelteKit
			"request": "launch",
			"command": "pnpm dev",
			"cwd": "${workspaceFolder}/apps/cotulenh-app", // Set working directory
			"serverReadyAction": {
				"pattern": "Local:\\s+(https?://localhost:\\d+)", // Pattern to detect server start (fixed escape chars)
				"uriFormat": "%s",
				"action": "debugWithChrome" // Open in Chrome debugger
			}
		}
	]
}