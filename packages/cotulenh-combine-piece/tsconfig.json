{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2019",
    "lib": ["ES2019", "dom"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"]
}
