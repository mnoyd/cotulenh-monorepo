{
  "name": "@repo/cotulenh-board",
  "version": "0.0.0",
  "description": "A js board for commander chess",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "$npm_execpath run dist",
    "compile": "tsc --sourceMap --declaration",
    "copy-assets": "mkdir -p dist/assets && cp -r assets/. dist/assets/",
    "dist": "rm -rf dist tsconfig.tsbuildinfo && $npm_execpath run compile && $npm_execpath run copy-assets && $npm_execpath run bundle",
    "format": "prettier --write .",
    "bundle": "vite build",
    "check-format": "prettier --check ."
  },
  "keywords": [
    "commander",
    "chess",
    "board",
    "javascript"
  ],
  "author": "Hoang Manh",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.5"
  },
  "exports": {
    ".": "./dist/index.js",
    "./assets/*": "./dist/assets/*",
    "./*": "./dist/*.js"
  },
  "files": [
    "dist/**/*",
    "assets/**/*"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "dependencies": {
    "@repo/cotulenh-combine-piece": "workspace:^"
  }
}
