{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "sample/**", "demo/**"]
}
