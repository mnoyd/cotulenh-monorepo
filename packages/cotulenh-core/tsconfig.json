    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "composite": true,
    "declarationMap": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["sample/**"],
  "references": [
    { "path": "./tsconfig.cjs.json" },
    { "path": "./tsconfig.esm.json" },
    { "path": "./tsconfig.types.json" }
  ]
}
