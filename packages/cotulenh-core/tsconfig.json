{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "composite": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["sample/**", "demo/**", "__tests__/legacy/**", "src/*-legacy.ts"],
  "references": [
    { "path": "./tsconfig.cjs.json" },
    { "path": "./tsconfig.esm.json" },
    { "path": "./tsconfig.types.json" }
  ]
}
