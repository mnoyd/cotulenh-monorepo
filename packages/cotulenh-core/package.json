{
  "name": "@repo/cotulenh-core",
  "version": "0.0.0",
  "description": "A Javascript library for managing commander chess game",
  "license": "BSD-2-Clause",
  "type": "module",
  "main": "./dist/cotulenh.cjs",
  "module": "./dist/cotulenh.js",
  "types": "./dist/cotulenh.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cotulenh.d.ts",
      "import": "./dist/cotulenh.js",
      "require": "./dist/cotulenh.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "vite build",
    "check": "npm run format:check && npm run lint && npm run test && npm run build",
    "clean": "rm -rf ./dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "bench": "vitest bench"
  },
  "author": "Hoang Manh",
  "devDependencies": {
    "@repo/vitest-config": "*",
    "@types/node": "^22.13.11",
    "@vitest/coverage-v8": "^1.6.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@repo/cotulenh-combine-piece": "workspace:^",
    "quick-lru": "^7.0.1"
  }
}
