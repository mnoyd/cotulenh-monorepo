{
  "name": "@cotulenh/board",
  "version": "0.0.0",
  "description": "A js board for commander chess",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "$npm_execpath run dist",
    "compile": "tsc --sourceMap --declaration",
    "copy-assets": "mkdir -p dist/assets && cp -r assets/. dist/assets/",
    "dist": "$npm_execpath run compile && $npm_execpath run bundle && $npm_execpath run copy-assets",
    "format": "prettier --write .",
    "bundle": "vite build",
    "check-format": "prettier --check ."
  },
  "keywords": [
    "commander",
    "chess",
    "board",
    "javascript"
  ],
  "author": "Hoang Manh",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.5"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./assets/*": "./dist/assets/*"
  },
  "files": [
    "dist/**/*",
    "assets/**/*"
  ],
  "dependencies": {
    "@cotulenh/combine-piece": "workspace:^",
    "@cotulenh/common": "workspace:^"
  }
}
