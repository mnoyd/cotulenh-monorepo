{
  "name": "@cotulenh/i18n",
  "version": "0.0.0",
  "description": "Shared i18n utilities for CoTuLenh packages and apps",
  "license": "BSD-2-Clause",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "check": "npm run format:check && npm run lint && npm run build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf ./dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@cotulenh/common": "workspace:^",
    "@types/node": "^22.13.11",
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0"
  }
}
