{
  "name": "@cotulenh/learn",
  "version": "0.0.0",
  "description": "Interactive tutorial system for learning Cotulenh game mechanics",
  "license": "BSD-2-Clause",
  "type": "module",
  "main": "./dist/learn.cjs",
  "module": "./dist/learn.js",
  "types": "./dist/learn.d.ts",
  "exports": {
    ".": {
      "types": "./dist/learn.d.ts",
      "import": "./dist/learn.js",
      "require": "./dist/learn.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf ./dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "author": "Hoang Manh",
  "devDependencies": {
    "@types/node": "^22.13.11",
    "@vitest/coverage-v8": "^1.6.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@cotulenh/core": "workspace:^",
    "@cotulenh/common": "workspace:^"
  }
}
