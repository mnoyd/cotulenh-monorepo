{
  "name": "@cotulenh/learn",
  "version": "0.0.0",
  "description": "Learning system for CoTuLenh - lessons, tutorials, and training",
  "license": "BSD-2-Clause",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "check": "npm run format:check && npm run test && npm run build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf ./dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "author": "Hoang Manh",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.13.11",
    "eslint": "^9.24.0",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@cotulenh/core": "workspace:^",
    "@cotulenh/common": "workspace:^"
  }
}
