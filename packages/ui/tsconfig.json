{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler", // Use 'node' if not using a modern bundler
		"resolveJsonModule": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "." // Root is the package directory itself
	},
	"include": ["**/*.ts", "**/*.svelte", "svelte-env.d.ts"], // Include files in the package dir
	"exclude": ["node_modules", "dist"]
}
