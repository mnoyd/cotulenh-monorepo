{
  "name": "cotulenh-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:app": "turbo run build --filter=@cotulenh/app",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.5.0",
    "prettier-plugin-svelte": "^3.3.3",
    "turbo": "^2.7.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
